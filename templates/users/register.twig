{% extends "base.twig" %}
{% block content %}

    <h1>Register</h1>
    <form class="" action="{{baseurl}}/register">

        <p>
            <label>Name:</label>
            <input type="text" id="name" class="form-control" />
        </p>

        <p>
            <label>Email address</label>
            <input type="email" id="email" class="form-control" />
        </p>

        <p>
            <label for="password">Password</label>
            <input type="password" id="password" class="form-control" />
        </p>

        <p>
            <button class="btn btn-primary" value="register" type="submit">Register</button>
            <button class="btn btn-default" value="cancel" type="submit">Return to log in</button>
        </p>
    </form>

{% endblock %}