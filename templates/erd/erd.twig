
digraph ERD {
rankdir=LR
node [shape=none, fontsize=12];
{% for table in selectedTables %}

    {% spaceless %}
        {{table.getName}} [label=<<TABLE CELLBORDER="1" CELLSPACING="0" BORDER="0">
            <TR><TD ALIGN="CENTER"><FONT POINT-SIZE="16"><B>{{table.getTitle}}</B></FONT></TD></TR>
                        {% for column in table.get_columns %}
                <TR>
                    <TD PORT="{{column.getName}}" ALIGN="LEFT">
                        {{column.getTitle}} ({{column.get_type}})
                    </TD>
                </TR>
            {% endfor %}
        </TABLE>>]
    {% endspaceless %}

    {% for column in table.get_columns %}
        {% if column.is_foreign_key %}
            {{table.getName}}:{{column.getName}} -> {{column.get_referenced_table.getName}}:{{column.get_referenced_table.get_pk_column.getName}};
        {% endif %}
    {% endfor %}

{% endfor %}

}

